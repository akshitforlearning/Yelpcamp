<% layout('layouts/boilerplate.ejs') %>

    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="post" class="needs-validation"
                enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="campground[title]"
                        value="<%= campgrounds.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input type="text" class="form-control" id="location" name="campground[location]"
                        value="<%= campgrounds.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campgrounds.price %>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea type="text" class="form-control" id="description" name="campground[description]"
                        required><%= campgrounds.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <!-- For single file upload -->
                    <!-- <input type="file" name="image"> -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Add More Images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                    <!-- For multiple files upload -->
                    <!-- <input type="file" name="image" multiple> -->
                    <!-- <label class="form-label" for="image">Image Url</label>
                    <input type="text" class="form-control" id="image" name="campground[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div> -->
                </div>
                <div class="mb-3">
                    <h6 class="text-muted">Delete Images</h6>
                    <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                        <% campgrounds.image.forEach(function(img , i){ %>
                            <div class="col">
                                <div class="card">
                                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                                    <div class="card-img-overlay text-end pt-1 pe-2">
                                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                            value="<%= img.filename %>">
                                        <label class="visually-hidden" for="image-<%= i %>">Delete?</label>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Update Campground</button>
                </div>

            </form>
            <a href="/campgrounds">Back to All Campgrounds</a>
        </div>
    </div>